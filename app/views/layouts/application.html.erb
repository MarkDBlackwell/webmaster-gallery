<!DOCTYPE html>
<html><head>
<title>Gallery</title>
<%= stylesheet_link_tag :all -%>
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>
<%= content_tag 'style', :type => 'text/css' do %>
div.manage-session * {display: inline}
div.all-tags * {display: inline}
div.picture {display: inline-block}
<%  end %>
</head><body>
<!--Messages-->
<%= content_tag 'div', flash[:notice], :class => 'notice',
        :id => 'notice' if flash[:notice] -%>
<%= content_tag 'div', flash[:error],  :class => 'notice error',
        :id => 'error'  if flash[:error] -%>
<%= "\n" if flash[:notice] || flash[:error] -%>
<!--Buttons-->
<%= content_tag 'div', :class => 'manage-session' do %>
<%=   content_tag 'div', :class => 'edit' do -%>
<%=     button_to 'files', {:controller => :sessions,
            :action => :edit}, :method => :get -%>
<%    end -%>

<%# Keep the previous blank line for pretty html formatting. %>
<%=   content_tag 'div', :class => 'show' do -%>
<%=     button_to 'database problems', {:controller => :sessions,
            :action => :show}, :method => :get -%>
<%    end -%>

<%# Keep blank line. %>
<%=   content_tag 'div', :class => 'admin-pictures-index' do -%>
<%=     button_to 'admin pictures', {:controller => :admin_pictures,
            :action => :index}, :method => :get -%>
<%    end -%>

<%# Keep blank line. %>
<%=   content_tag 'div', :class => 'user-pictures-index' do -%>
<%=     button_to 'user pictures', {:controller => :pictures,
            :action => :index}, :method => :get -%>
<%    end -%>

<%# Keep blank line. %>
<%=   content_tag 'div', :class => 'destroy' do -%>
<%=     button_to 'log out', {:controller => :sessions, :action => :destroy},
            :method => :delete -%>
<%    end -%>
<%  end -%>

<%# Keep blank line. %>
<!--Action content-->
<%= yield %>
</body></html>
