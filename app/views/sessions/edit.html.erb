<%= render :partial => 'sessions/review_group', :collection =>
        @review_groups -%>
<%= content_tag :div, :class => 'approve' do -%>
<%    if @approval_group -%>
<%=     form_tag({:controller => :sessions, :action => :show},
            :method => :get) do -%><%= %>
<%=       hidden_field_tag 'approval_group', @approval_group.join(' ') -%><%= %>
<%=       submit_tag('approve') -%><%= %>
<%        end -%>
<%    end -%>
<%  end -%>
