<%= content_tag :div, :class => 'review-group' do -%>
<%=   content_tag :div, :class => 'review-message' do -%>
<%=     review_group.message %>
<%    end -%>
<%    a=review_group.list -%>
<%    case -%>
<%    when a.first.kind_of?(Tag) -%>
<%      a=a.map(&:name) -%>
<%    when a.first.kind_of?(Picture) -%>
<%      a=a.map(&:filename) -%>
<%    end -%>
<%=   a.sort.join(' ') -%>
<%  end -%>
