<%# %%vi%%pic%%fie -%>
<%= content_tag :div, :class => 'field' do -%>
<%=   content_tag :div, :class => field do -%>
<%      value=record[field]
        label=raw(' &nbsp; ').concat field
        uneditables=[:filename,:sequence]
        plain=(uneditables.include? field) || ! @edit_fields
        unless hide=:filename==field && ! @show_filename -%>
<%=       plain ? value : (text_field_tag record, field,
              :value => value, :name => "picture[#{field}]") -%>
<%=       content_tag :div, label, :class => 'label' if @show_labels -%>
<%      end -%>
<%    end -%>
<%  end -%>
